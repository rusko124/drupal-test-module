<?php
/**
 * @file
 * This module for sending emails
 */

/*
 * Implements hook_mail()
 */
function internet_reception_mail($key, &$message, $params) {
  switch ($key) {
    case 'internet_reception_key':
      $message['subject'] = $params['subject'];
      $message['body'][] = $params['body'];
      break;
  };
};
